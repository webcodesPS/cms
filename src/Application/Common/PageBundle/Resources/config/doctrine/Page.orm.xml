<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    <entity repository-class="App\Application\Common\PageBundle\Repository\PageRepository" name="App\Application\Common\PageBundle\Entity\Page" table="page">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" column="name" length="128" nullable="false"/>

        <field name="slug" type="string" length="128" unique="true">
            <gedmo:slug unique="true" style="default" updatable="true" separator="-" fields="name" />
        </field>

        <field name="updatedAt" type="datetime" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <field name="createdAt" type="datetime" nullable="false">
            <gedmo:timestampable on="create"/>
        </field>

        <many-to-one field="content" target-entity="App\Application\Common\PageBundle\Entity\Content">
            <join-column name="content_id" referenced-column-name="id" />
        </many-to-one>

    </entity>
</doctrine-mapping>